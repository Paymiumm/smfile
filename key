def generate_hash_values(name):
    return generate_password_hash(name, method='sha256')


class GenerateQrCode(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    tokens = db.Column(db.String(500), nullable=False)

    def __init__(self, name, amount, transact_id, transact_key):
        self.name = name
        self.amount = amount
        self.transact_id = transact_id
        self.transact_key = transact_key

    def generate_hash_token(self, value):
        return generate_hash_values(value)

    def verify_hashed_values(self, text):
        return check_password_hash(self.tokens, text)
